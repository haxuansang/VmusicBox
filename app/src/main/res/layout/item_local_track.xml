<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_root"
        android:layout_width="fill_parent"
        android:layout_height="90.0sp"
        >

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="50.0sp"
            android:layout_height="50.0sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0sp"
            android:gravity="center"
            android:text="1."
            android:textColor="@color/white"
            android:textSize="15.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0sp"
            android:layout_marginRight="5.0sp"
            android:layout_toLeftOf="@+id/img_menu"
            android:layout_toRightOf="@+id/tv_number"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_song"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="VEXKHOIS"
                android:textColor="@color/white"
                android:textSize="15.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="16:00"
                android:textColor="@color/white"
                android:textSize="15.0sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0sp"
            android:background="@drawable/ic_more_vert_grey600_36dp" />
    </RelativeLayout>
</RelativeLayout>