<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_root"
        android:layout_width="fill_parent"
        android:layout_height="90.0sp"
     >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_songs"
            android:layout_width="60.0sp"
            android:layout_height="60.0sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_music_default" />

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_more_vert_grey600_36dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0sp"
            android:layout_marginRight="5.0sp"
            android:layout_toLeftOf="@+id/img_menu"
            android:layout_toRightOf="@+id/img_songs"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_song"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="VEXKHOIS"
                android:textColor="@color/white"
                android:textSize="15.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_singer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0sp"
                android:text="VEXKHOIS"
                android:textColor="@color/white"
                android:textSize="14.0sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>