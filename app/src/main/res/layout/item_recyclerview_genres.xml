<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/item_discover_width"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:padding="5dp"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/_2sdp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/image_view_discover_hiz"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_discover_width"
                android:src="@drawable/alternativerock_g" />
            <TextView
                android:id="@+id/text_view_discover_hiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginLeft="@dimen/item_reyclerview_textview_margin_left"
                android:text="ffffffff"
                android:textColor="@color/white"
                android:textSize="@dimen/item_recyclerview_text" />
        </FrameLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>